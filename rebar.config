{deps, [
  {eredis, {git, "https://gitee.com/fastdgiot/eredis", {tag, "1.2.5"}}},
  {poolboy, {git, "https://gitee.com/fastdgiot/poolboy.git", {branch, "1.5.1"}}}
]}.
{erl_opts, [warnings_as_errors,
            warn_export_all]}.

{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.

{edoc_opts, [{doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}]}.
